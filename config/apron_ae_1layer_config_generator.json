{
    "name": "ae_1layer_apron_generator",
    "n_gpu": 2,

    "arch": {
        "type": "AE_1layer",
        "autoencoder": true,
        "args": {
            "num_channels": 1,
            "num_filters": 32
        }
    },
    "data_loader": {
        "type": "ApronDataLoaderGenerator",
        "args": {
            "data_dir": "/data/ADAPD/whole_apron_fft/train.pkl",
            "batch_size": 16,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 0
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "mse_loss",
    "metrics": [],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "../ae_apron_results",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,
        
        "tensorboardX": true
    }
}
