{
    "name": "ae_resnet_generator",
    "n_gpu": 1,

    "arch": {
        "type": "FineTuneModel",
        "args": {
            "base_arch": "ResNet_AE",
	    "latent_dim": 1000,
            "num_classes": 4,
            "base_ckpt_pth": null
        }
    },
    "data_loader": {
        "type": "ApronDataLoaderSmall",
        "args": {
            "data_dir": "/data/ADAPD/small_apron/ss",
            "batch_size": 1,
            "shuffle": true,
            "validation_split": 0.0,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "my_metric", "my_metric2"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 2,

        "save_dir": "../fineTune_small_apron_ss",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,
        
        "tensorboardX": true
    }
}
