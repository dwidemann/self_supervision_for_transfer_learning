{
    "name": "acoustic_ae",
    "n_gpu": 2,

    "arch": {
        "type": "ResNet_AE",
        "autoencoder": true,
        "args": {
	    }
    },
    "data_loader": {
        "type": "AcousticDataLoader",
        "args": {
            "data_dir": "/gsceph/adapd/acoustic/AA_10",
            "batch_size": 2,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 0
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "mse_loss",
    "metrics": [],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "../ae_acoustic_results",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,
        
        "tensorboardX": true
    }
}
